generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  password    String
  phone       String?
  role        Role         @default(USER)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  bookings    Booking[]
  venueAdmins VenueAdmin[]
}

model Venue {
  id              String          @id @default(cuid())
  name            String
  description     String?
  address         String
  cityId          String
  provinceId      String
  location        String?
  rules           String?
  imageUrl        String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  courts          Court[]
  admins          VenueAdmin[]
  venueFacilities venueFacility[]
  province        province        @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  city            city            @relation(fields: [cityId], references: [id], onDelete: Cascade)
}

model Court {
  id              String         @id @default(cuid())
  name            String
  type            CourtType
  floorType       String?
  sessionDuration Int            @default(60)
  pricePerHour    Int
  isActive        Boolean        @default(true)
  venueId         String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  bookings        Booking[]
  pricing         CourtPricing[]
  venue           Venue          @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@index([venueId])
}

model Booking {
  id           String        @id @default(cuid())
  userId       String
  courtId      String
  date         DateTime
  startTime    String
  endTime      String
  duration     Int
  totalPrice   Int
  status       BookingStatus @default(PENDING)
  paymentProof String?
  notes        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  court        Court         @relation(fields: [courtId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courtId])
  @@index([date])
}

model VenueAdmin {
  id        String   @id @default(cuid())
  userId    String
  venueId   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  venue     Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@unique([userId, venueId])
  @@index([userId])
  @@index([venueId])
}

model CourtPricing {
  id        String   @id @default(cuid())
  courtId   String
  dayType   DayType
  startTime String
  endTime   String
  price     Int
  discount  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  court     Court    @relation(fields: [courtId], references: [id], onDelete: Cascade)

  @@index([courtId])
  @@index([dayType])
}

model venueFacility {
  id         String   @id @default(cuid())
  venueId    String
  facilityId String
  createdAt  DateTime @default(now())
  venue      Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)
  facility   facility @relation(fields: [facilityId], references: [id], onDelete: Cascade)

  @@unique([venueId, facilityId])
  @@index([venueId])
  @@index([facilityId])
}

model facility {
  id        String   @id @default(cuid())
  name      String
  icon      String?  @default("material-symbols:add-row-above-rounded")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  venueFacilities venueFacility[]

  @@unique([name])
}

model province {
  id        String   @id
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cities city[]
  venues Venue[]
}

model city {
  id         String   @id
  name       String
  provinceId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  province   province @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  venues     Venue[]

  @@index([provinceId])
}

enum Role {
  USER
  VENUE_ADMIN
  SUPER_ADMIN
}

enum CourtType {
  BADMINTON
  PADEL
  MINISOCCER
}

enum DayType {
  WEEKDAY
  WEEKEND
  HOLIDAY
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
