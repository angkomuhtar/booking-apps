generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String         @id @default(cuid())
  name        String
  email       String         @unique
  password    String
  phone       String?
  role        Role           @default(USER)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  bookings    Booking[]
  venueAdmins VenueAdmin[]
}

model Venue {
  id          String         @id @default(cuid())
  name        String
  description String?
  address     String
  city        String
  imageUrl    String?
  facilities  String[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  courts      Court[]
  admins      VenueAdmin[]
}

model Court {
  id           String    @id @default(cuid())
  name         String
  type         CourtType
  pricePerHour Int
  isActive     Boolean   @default(true)
  venueId      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  bookings     Booking[]
  venue        Venue     @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@index([venueId])
}

model Booking {
  id           String        @id @default(cuid())
  userId       String
  courtId      String
  date         DateTime
  startTime    String
  endTime      String
  duration     Int
  totalPrice   Int
  status       BookingStatus @default(PENDING)
  paymentProof String?
  notes        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  court        Court         @relation(fields: [courtId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courtId])
  @@index([date])
}

model VenueAdmin {
  id        String   @id @default(cuid())
  userId    String
  venueId   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  venue     Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@unique([userId, venueId])
  @@index([userId])
  @@index([venueId])
}

enum Role {
  USER
  VENUE_ADMIN
  SUPER_ADMIN
}

enum CourtType {
  BADMINTON
  PADEL
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
