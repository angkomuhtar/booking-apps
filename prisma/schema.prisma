generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String         @id @default(cuid())
  name            String
  email           String         @unique
  password        String
  phone           String?
  roleId          String?
  accessAllVenues Boolean        @default(false)
  createdById     String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  orders          Order[]
  venueAccess     VenueAccess[]
  adminRequests   AdminRequest[]
  role            Role?          @relation(fields: [roleId], references: [id])
  createdBy       User?          @relation("CreatedByUser", fields: [createdById], references: [id])
  createdUsers    User[]         @relation("CreatedByUser")
  venueReviews    VenueReview[]
}

model Role {
  id          String           @id @default(cuid())
  name        String           @unique
  description String?
  isSystem    Boolean          @default(false)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  users       User[]
  permissions RolePermission[]
}

model Permission {
  id          String           @id @default(cuid())
  name        String           @unique
  code        String           @unique
  group       String
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  roles       RolePermission[]
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime   @default(now())
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model Venue {
  id              String          @id @default(cuid())
  name            String
  description     String?
  address         String
  cityId          String
  provinceId      String
  location        String?
  rules           String?
  rating          Float           @default(0)
  totalReviews    Int             @default(0)
  openingTime     String          @default("06:00")
  closingTime     String          @default("23:00")
  venueImages     VenueImage[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  courts          Court[]
  orders          Order[]
  products        Product[]
  venueAccess     VenueAccess[]
  venueFacilities venueFacility[]
  province        province        @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  city            city            @relation(fields: [cityId], references: [id], onDelete: Cascade)
  venueReviews    VenueReview[]
}

model Court {
  id              String         @id @default(cuid())
  name            String
  type            String? 
  floor           String?
  sessionDuration Int            @default(60)
  pricePerHour    Int
  isActive        Boolean        @default(true)
  venueId         String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  pricing         CourtPricing[]
  venue           Venue          @relation(fields: [venueId], references: [id], onDelete: Cascade)
  courtType       CourtType?     @relation(fields: [type], references: [id], onDelete: SetNull)
  floorType       FloorType?     @relation(fields: [floor], references: [id], onDelete: SetNull)
  courtImages     CourtImage[]

  @@index([venueId])
}

model Order {
  id               String      @id @default(cuid())
  userId           String
  venueId          String
  orderNumber      String      @unique
  orderSource      OrderSource @default(ONLINE)
  customerName     String? // nama customer walk-in (jika userId null)
  customerPhone    String? // phone walk-in customer
  cashierId        String? // user ID kasir yang memproses
  subtotal         Int
  discount         Int         @default(0)
  totalPrice       Int
  dpAmount         Int? // jumlah DP yang dibayar
  dpPaidAt         DateTime? // waktu bayar DP
  remainingAmount  Int? // sisa yang harus dibayar
  status           OrderStatus @default(CREATED)
  paymentMethod    String?
  paymentProof     String?
  notes            String?
  paidAt           DateTime?
  payment_url      String?
  snap_token       String?
  payment_expireAt DateTime?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  user             User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  venue            Venue       @relation(fields: [venueId], references: [id], onDelete: Cascade)
  items            OrderItem[]

  @@index([userId])
  @@index([venueId])
  @@index([status])
}

enum OrderSource {
  ONLINE
  POS
}

enum PaymentStatus {
  UNPAID
  DP_PAID
  FULLY_PAID
}

model OrderItem {
  id        String        @id @default(cuid())
  orderId   String
  itemType  OrderItemType
  itemId    String
  name      String
  price     Int
  quantity  Int           @default(1)
  date      DateTime?
  startTime String?
  endTime   String?
  duration  Int?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  order     Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([itemType])
}

model Product {
  id          String   @id @default(cuid())
  venueId     String
  name        String
  description String?
  price       Int
  stock       Int      @default(0)
  imageUrl    String?
  category    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  venue       Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@index([venueId])
}

model VenueAccess {
  id        String   @id @default(cuid())
  userId    String
  venueId   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  venue     Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@unique([userId, venueId])
  @@index([userId])
  @@index([venueId])
}

model CourtPricing {
  id        String   @id @default(cuid())
  courtId   String
  dayType   DayType
  startTime String
  endTime   String
  price     Int
  discount  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  court     Court    @relation(fields: [courtId], references: [id], onDelete: Cascade)

  @@index([courtId])
  @@index([dayType])
}

model venueFacility {
  id         String   @id @default(cuid())
  venueId    String
  facilityId String
  createdAt  DateTime @default(now())
  venue      Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)
  facility   facility @relation(fields: [facilityId], references: [id], onDelete: Cascade)

  @@unique([venueId, facilityId])
  @@index([venueId])
  @@index([facilityId])
}

model facility {
  id        String   @id @default(cuid())
  name      String
  icon      String?  @default("material-symbols:add-row-above-rounded")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  venueFacilities venueFacility[]

  @@unique([name])
}

model province {
  id        String   @id
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cities        city[]
  venues        Venue[]
  adminRequests AdminRequest[]
}

model city {
  id            String         @id
  name          String
  provinceId    String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  province      province       @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  venues        Venue[]
  adminRequests AdminRequest[]

  @@index([provinceId])
}

model VenueImage {
  id        String   @id @default(cuid())
  venueId   String
  imageUrl  String
  order     Int      @default(0)
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  venue     Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@index([venueId])
  @@index([isPrimary])
}

model CourtImage {
  id        String   @id @default(cuid())
  courtId   String
  imageUrl  String
  order     Int      @default(0)
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  court     Court    @relation(fields: [courtId], references: [id], onDelete: Cascade)

  @@index([courtId])
  @@index([isPrimary])
}

model VenueReview {
  id                String             @id @default(cuid())
  venueId           String
  userId            String
  rating            Int
  comment           String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  venue             Venue              @relation(fields: [venueId], references: [id], onDelete: Cascade)
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  venueReviewImages venueReviewImage[]

  @@index([venueId])
  @@index([userId])
}

model venueReviewImage {
  id            String      @id @default(cuid())
  venueReviewId String
  imageUrl      String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  venueReview   VenueReview @relation(fields: [venueReviewId], references: [id], onDelete: Cascade)

  @@index([venueReviewId])
}

model AdminRequest {
  id           String             @id @default(cuid())
  userId       String
  venueName    String
  venueAddress String
  cityId       String
  provinceId   String
  description  String?
  status       AdminRequestStatus @default(PENDING)
  rejectReason String?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  province     province           @relation(fields: [provinceId], references: [id])
  city         city               @relation(fields: [cityId], references: [id])

  @@index([userId])
  @@index([status])
}

model CourtType {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  courts    Court[]
}

model FloorType {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  courts    Court[]
}

enum AdminRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DayType {
  WEEKDAY
  WEEKEND
  HOLIDAY
}

enum OrderStatus {
  CREATED
  WAIT_PAYMENT
  PAID
  PROCESSING
  COMPLETED
  CANCELLED
  REFUNDED
}

enum OrderItemType {
  COURT_BOOKING
  PRODUCT
}
